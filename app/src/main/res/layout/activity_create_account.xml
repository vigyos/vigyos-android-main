<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateAccountActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_100sdp"
                android:text="Welcome !"
                android:textSize="@dimen/_24sdp"
                android:textColor="@color/dark_vigyos"
                android:fontFamily="@font/poppins_semi_bold"/>
            <LinearLayout
                android:id="@+id/userDetailsLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_below="@+id/welcome">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#999999"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_regular"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/credential_border">
                    <EditText
                        android:id="@+id/userFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:background="@null"
                        android:hint="Krishnkant Sharma"
                        android:textSize="@dimen/_14sdp"
                        android:textColorHint="@color/dark_vigyos"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="Email Address"
                    android:textColor="#999999"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_regular"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="#F7F7F7"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="0sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/emailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/poppins_regular"
                            android:background= "@null"
                            android:hint=""
                            android:textSize="@dimen/_14sdp"
                            android:textColorHint="#737373"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="Password"
                    android:textColor="#999999"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_regular"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="#F7F7F7"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardElevation="0sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/passwordVisibility"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:inputType="textPassword"
                            android:fontFamily="@font/poppins_regular"
                            android:background= "@null"
                            android:hint=""
                            android:textSize="@dimen/_14sdp"
                            android:textColorHint="#737373"/>
                        <ImageView
                            android:id="@+id/passwordVisibility"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginEnd="15sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/visibility_icon"
                            app:tint="#999999" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/checkBoxLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userDetailsLyt"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:buttonTint="@color/dark_vigyos"/>
                <TextView
                    android:id="@+id/i_have"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/checkbox"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="I have agree to our"
                    android:textColor="@color/dark_vigyos"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/termsAndConditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/i_have"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="@string/terms_and_condition"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_10sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/signUpButton"
                android:layout_width="match_parent"
                android:layout_height="56sp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_below="@+id/checkBoxLyt"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@drawable/next_button_filled">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/signUpWithNumber"
                android:layout_width="match_parent"
                android:layout_height="56sp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_below="@+id/signUpButton"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/next_button_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="With Phone Number"
                    android:textColor="@color/dark_vigyos"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/signUpWithNumber">
                <TextView
                    android:id="@+id/accountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Already have an account ? "
                    android:textColor="@color/dark_vigyos"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/signUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/accountText"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Sign In"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>