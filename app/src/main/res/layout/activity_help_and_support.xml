<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Activity.HelpAndSupportActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/vigyos">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            app:tint="@color/white"
            android:src="@drawable/arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivBack"
            android:layout_marginStart="10sp"
            android:text="Help And Support"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/helpAndSupportIcon"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="centerCrop"
            app:lottie_fileName="help_and_support.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@+id/helpAndSupportIcon">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10sp"
                app:cardElevation="5sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">
                    <RelativeLayout
                        android:id="@+id/iconLyt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10sp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_bg">
                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_centerInParent="true"
                            android:padding="5sp"
                            android:src="@drawable/phone_icon"
                            app:tint="@color/vigyos"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/iconLyt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Service"
                            android:textColor="#747575"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:text="+91 - 9513885050"
                            android:textColor="@color/vigyos"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="20sp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10sp"
                app:cardElevation="5sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">
                    <RelativeLayout
                        android:id="@+id/emailIconLyt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10sp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_bg">
                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_centerInParent="true"
                            android:padding="5sp"
                            android:src="@drawable/email_icon"
                            app:tint="@color/vigyos" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/emailIconLyt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write us at"
                            android:textColor="#747575"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:text="support@vigyos.com"
                            android:textColor="@color/vigyos"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>