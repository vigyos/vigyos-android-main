<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.BBPS.Recharge.MobileRechargeActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"
            app:tint="@color/dark_vigyos"/>
        <TextView
            android:id="@+id/titleName"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elegantTextHeight="true"
            android:maxLines="1"
            android:textAlignment="center"
            android:text="Mobile Recharge"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:id="@+id/numberAndOperatorLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="visible"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/round_bg_white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_15sdp">
                <RelativeLayout
                    android:id="@+id/detailsTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/recharge"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/icon">
                        <TextView
                            android:id="@+id/mobileNumberTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:text="Mobile Number"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/poppins_medium"/>
                        <TextView
                            android:id="@+id/mobileNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobileNumberTitle"
                            android:elegantTextHeight="true"
                            android:text="+91 "
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/poppins_regular"/>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/detailsTop"
                    android:background="#80333333"/>
                <RelativeLayout
                    android:id="@+id/operatorDetailsLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewLine"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/credential_border">
                    <RelativeLayout
                        android:id="@+id/operatorAndCircleLyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/dropDown"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/operatorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Operator"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="#575656"
                            android:fontFamily="@font/poppins_regular"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/operatorText">
                            <TextView
                                android:id="@+id/operatorAndCircleNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elegantTextHeight="true"
                                android:text=", "
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_11sdp"
                                android:fontFamily="@font/poppins_regular"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/dropDown"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/drop_down"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_below="@+id/operatorDetailsLyt"
                    android:background="@drawable/round_bg_white">
                    <RelativeLayout
                        android:id="@+id/firstLyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:text="â‚¹1000"
                            android:textColor="#001646"
                            android:textSize="@dimen/_18sdp"
                            android:fontFamily="@font/poppins_medium"/>
                        <View
                            android:id="@+id/line2"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="#CCCCCC"
                            android:layout_toEndOf="@+id/amount"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/line2"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_15sdp">
                            <TextView
                                android:id="@+id/validityText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Validity: "
                                android:elegantTextHeight="true"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="#80232323"
                                android:fontFamily="@font/poppins_regular"/>
                            <TextView
                                android:id="@+id/validity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/validityText"
                                android:text="28 days"
                                android:maxLines="1"
                                android:elegantTextHeight="true"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="#001646"
                                android:fontFamily="@font/poppins_semi_bold"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/changePlan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/round_button_color">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginVertical="@dimen/_5sdp"
                                android:elegantTextHeight="true"
                                android:text="Change Plan"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_medium"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/firstLyt"
                        android:background="#C4C4C4"
                        android:layout_marginHorizontal="@dimen/_10sdp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line3"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/planDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:elegantTextHeight="true"
                            android:text="GST (Nil) Monthly Return Filing Regular Scheme"
                            android:textColor="#001646"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_regular"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rechargeButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/next_button_filled">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semi_bold"
                android:elegantTextHeight="true"
                android:text="Recharge Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>