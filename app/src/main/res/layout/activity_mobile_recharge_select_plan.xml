<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Activity.BBPS.Recharge.MobileRechargeSelectPlanActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"
            app:tint="@color/dark_vigyos"/>
        <TextView
            android:id="@+id/titleName"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elegantTextHeight="true"
            android:maxLines="1"
            android:textAlignment="center"
            android:text="Mobile Recharge"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:id="@+id/numberAndOperatorLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/round_bg_white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_15sdp">
                <RelativeLayout
                    android:id="@+id/detailsTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/recharge"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/icon">
                        <TextView
                            android:id="@+id/mobileNumberTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:text="Mobile Number"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/poppins_medium"/>
                        <TextView
                            android:id="@+id/mobileNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobileNumberTitle"
                            android:elegantTextHeight="true"
                            android:text="+91 "
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/light_black"
                            android:fontFamily="@font/poppins_regular"/>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/detailsTop"
                    android:background="#80333333"/>
                <RelativeLayout
                    android:id="@+id/operatorDetailsLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewLine"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/credential_border">
                    <RelativeLayout
                        android:id="@+id/operatorAndCircleLyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/dropDown"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/operatorText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Operator"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="#575656"
                            android:fontFamily="@font/poppins_regular"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/operatorText">
                            <TextView
                                android:id="@+id/operatorNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elegantTextHeight="true"
                                android:text=", "
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_11sdp"
                                android:fontFamily="@font/poppins_regular"/>
                            <TextView
                                android:id="@+id/circleNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/operatorNameText"
                                android:elegantTextHeight="true"
                                android:visibility="gone"
                                android:text="Madhya Pradesh"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_11sdp"
                                android:fontFamily="@font/poppins_regular"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/dropDown"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/drop_down"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/disclaimerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/operatorDetailsLyt"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:elegantTextHeight="true"
                    android:text="@string/disclaimer_we_support"
                    android:textColor="#80333333"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/poppins_regular"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/topUpLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_below="@+id/numberAndOperatorLyt">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topUpRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/layout_plan_title"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/planDetailsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_below="@+id/topUpLyt"
            tools:listitem="@layout/layout_plan_details"/>
    </RelativeLayout>
</RelativeLayout>