<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vigyos"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.PayOutActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/vigyos">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/ivBack"
            android:text="Payout"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/payLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="10sp">
        <RelativeLayout
            android:id="@+id/textLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp">
            <TextView
                android:id="@+id/payoutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Balance"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/payoutBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_below="@+id/payoutTextView"
                android:text="â‚¹2,364.00"
                android:textSize="30sp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLyt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30sp"
            android:padding="5sp"
            android:background="@drawable/done_button_bg">
            <ImageView
                android:id="@+id/addIcon"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/add_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/addIcon"
                android:layout_marginStart="5sp"
                android:text="Add Account"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/payLyt"
        android:orientation="vertical"
        android:background="@drawable/home_round_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selectAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginStart="20sp"
                android:text="Select Account"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_toEndOf="@+id/selectAccount"
                android:text="*"
                android:textColor="#FF0000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_below="@+id/selectAccount"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/spinner_bg">
                <Spinner
                    android:id="@+id/payoutBankName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/enterAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginStart="20sp"
                android:text="Amount"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_toEndOf="@+id/enterAmount"
                android:text="*"
                android:textColor="#FF0000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_below="@+id/enterAmount"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="20sp"
                android:background="@drawable/spinner_bg">
                <EditText
                    android:id="@+id/payoutAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingStart="10sp"
                    android:hint="0.0"
                    android:lines="1"
                    android:textSize="15sp"
                    android:textColorHint="@color/grey_font" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/createPayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginHorizontal="28sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/login_gradient">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Create Payout"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>