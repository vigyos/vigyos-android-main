<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ShowServicesActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/vigyos">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="5sp"
            app:tint="@color/white"/>
        <TextView
            android:id="@+id/serviceName"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBack"
            android:layout_marginStart="10sp"
            android:maxLines="1"
            android:text="Service Name"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp">
            <TextView
                android:id="@+id/overView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_marginTop="5sp"
                android:text="Overview"
                android:textSize="18sp"
                android:textColor="#232222"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:id="@+id/serviceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_marginTop="5sp"
                android:text="@string/details"
                android:textSize="18sp"
                android:textColor="#5C5A5A" />
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_marginTop="20sp"
                android:text="Price"
                android:textSize="18sp"
                android:textColor="#232222"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginHorizontal="5sp"
                android:text="â‚¹500.00"
                android:textSize="18sp"
                android:textColor="#5C5A5A" />
            <TextView
                android:id="@+id/requiredDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_marginTop="20sp"
                android:text="Required Document"
                android:textSize="18sp"
                android:textColor="#232222"
                android:fontFamily="@font/poppins_bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/round_bg">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        android:layout_gravity="bottom"
        android:background="@color/vigyos">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Apply Now"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>