<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.VerifyAccountActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/phoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_100sdp"
            android:text="Verify Account"
            android:textSize="@dimen/_24sdp"
            android:textColor="@color/dark_vigyos"
            android:fontFamily="@font/poppins_semi_bold"/>
        <TextView
            android:id="@+id/detailLyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_below="@+id/phoneNumberText"
            android:text="Enter 4 digit code we have sent to "
            android:lineSpacingExtra="@dimen/_3sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="#999999"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"/>
        <RelativeLayout
            android:id="@+id/toAndValueLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailLyt"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center">
            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="to "
                android:textSize="@dimen/_12sdp"
                android:textColor="#999999"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/to"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/dark_vigyos"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"/>
        </RelativeLayout>
        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_below="@+id/toAndValueLyt"
            android:layout_centerHorizontal="true"
            android:cursorVisible="true"
            android:inputType="number"
            android:padding="10sp"
            android:textColor="@color/dark_vigyos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/hankengrotesk_medium"
            app:cursorColor="@color/dark_vigyos"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="false"
            app:itemCount="4"
            app:itemHeight="@dimen/_40sdp"
            app:itemWidth="@dimen/_50sdp"
            app:itemRadius="10dp"
            app:itemSpacing="15dp"
            app:lineColor="@color/dark_vigyos"
            app:lineWidth="2dp"
            app:viewType="rectangle" />
        <TextView
            android:id="@+id/dontText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstPinView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_35sdp"
            android:text="Havenâ€™t received verification code?"
            android:textSize="@dimen/_12sdp"
            android:textColor="#999999"/>
        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dontText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="gone"
            android:text="@string/resend_code"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/dark_vigyos"
            android:fontFamily="@font/poppins_semi_bold"/>
        <TextView
            android:id="@+id/countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dontText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="00"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/dark_vigyos"
            android:fontFamily="@font/poppins_semi_bold"/>
        <RelativeLayout
            android:id="@+id/verifyNow"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="@dimen/_23sdp"
            android:background="@drawable/next_button_filled">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Verify Now"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>