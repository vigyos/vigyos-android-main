<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.WalletActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/TotalCardView"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/wallet_gradient"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15dp"
                android:src="@drawable/arrow_back"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBack"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Your Balance"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="15sp"
                android:layout_marginBottom="35sp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="₹ 2,000"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/spend_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginVertical="5sp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Spend - ₹ 0.0"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40sp"
                android:layout_marginBottom="25sp"
                android:src="@drawable/star"
                app:tint="@color/white"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/transactionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginStart="10sp"
            android:layout_below="@+id/TotalCardView"
            android:text="Transaction"
            android:textColor="@color/title_text"
            android:textSize="22sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:layout_below="@+id/transactionTextView"
            android:background="@drawable/recycle_borderline"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Wallet History"
                android:textSize="25sp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wallet_recycler"
            android:background="@drawable/recycle_borderline"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactionTextView"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/layout_history_item" />
    </RelativeLayout>
</RelativeLayout>