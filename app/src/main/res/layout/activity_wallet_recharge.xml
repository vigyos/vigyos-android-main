<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.WalletRechargeActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back"
            app:tint="@color/dark_vigyos"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Wallet Recharge"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round_bg_white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp">
                <TextView
                    android:id="@+id/walletBL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Current Wallet Balance"
                    android:elegantTextHeight="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#001646"
                    android:fontFamily="@font/poppins_medium"/>
                <RelativeLayout
                    android:id="@+id/amountLyt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/walletBL">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/rupee_icon"/>
                    <TextView
                        android:id="@+id/walletAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/icon"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:text=" 245.83"
                        android:maxLines="1"
                        android:elegantTextHeight="true"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="#001646"
                        android:fontFamily="@font/poppins_medium"/>
                </RelativeLayout>
                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@+id/amountLyt"
                    android:background="#80333333"/>
                <RelativeLayout
                    android:id="@+id/rechargeAmountLyt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/viewLine"
                    android:background="@drawable/credential_border">
                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:src="@drawable/rupee_icon"/>
                    <EditText
                        android:id="@+id/rechargeAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/icon1"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:maxLines="1"
                        android:elegantTextHeight="true"
                        android:textColor="#001646"
                        android:inputType="number|textImeMultiLine"
                        android:fontFamily="@font/poppins_medium"
                        android:background= "@null"
                        android:hint=""
                        android:textSize="@dimen/_16sdp"
                        android:textColorHint="#D3D1D1"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:layout_below="@+id/rechargeAmountLyt">
                    <LinearLayout
                        android:id="@+id/firstAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/credential_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:text="₹1000"
                            android:textColor="#001646"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/secondAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/credential_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:text="₹2000"
                            android:textColor="#001646"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/thirdAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/credential_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:text="₹2500"
                            android:textColor="#001646"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fourAmount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/credential_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:text="₹5000"
                            android:textColor="#001646"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/poppins_medium"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rechargeButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/next_button_filled">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elegantTextHeight="true"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Recharge"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>