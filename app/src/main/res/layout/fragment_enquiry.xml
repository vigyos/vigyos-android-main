<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment.EnquiryFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="5sp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/aadhaarNumberHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhaar Number"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0303"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#F9FCFF"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp">
                    <EditText
                        android:id="@+id/aadhaarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginHorizontal="15sp"
                        android:hint="Ex. 1234 1234 1234"
                        android:lines="1"
                        android:textSize="15sp"
                        android:textColorHint="@color/grey_font"
                        android:inputType="number" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/bankNameHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Bank Name"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/vigyos" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0303"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="#F9FCFF"
                    app:cardElevation="4dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp">
                    <Spinner
                        android:id="@+id/bankName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="5dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/mobileNumberHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0303"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#F9FCFF"
                    app:cardElevation="4dp">
                    <EditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginHorizontal="15dp"
                        android:hint="Ex. 9876543210"
                        android:lines="1"
                        android:textSize="15sp"
                        android:textColorHint="@color/grey_font"
                        android:inputType="number" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/remarkHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark (Optional)"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/vigyos"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#F9FCFF"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/remarkEnquiry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginHorizontal="15sp"
                        android:hint="Remark"
                        android:lines="1"
                        android:textSize="15sp"
                        android:minHeight="40dp"
                        android:maxHeight="70dp"
                        android:textColorHint="@color/grey_font" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/fingerHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finger Print"
                        android:layout_marginStart="20sp"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0303"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/captureFingerPrint"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/vigyos"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Capture Finger Print"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/captureData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"
                        android:src="@drawable/done_icon"
                        app:tint="#89FF00"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/buttonDone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_submit"
                android:layout_marginHorizontal="45dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="DONE"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:fontFamily="@font/montserrat_bold"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>