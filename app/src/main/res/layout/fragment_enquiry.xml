<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.vigyos.vigyoscentercrm.Fragment.EnquiryFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETAILS"
                        android:textSize="30sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#5A5959"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">
                            <TextView
                                android:id="@+id/aadhaarNumberHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aadhaar Number"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/vigyos"
                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#FF0303"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="#F5F7FA"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="15dp">
                            <EditText
                                android:id="@+id/aadhaarNumber"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="Ex. 1234 1234 1234"
                                android:lines="1"
                                android:textSize="15sp"
                                android:padding="15sp"
                                android:textColorHint="@color/grey_font"
                                android:inputType="number" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">
                            <TextView
                                android:id="@+id/bankNameHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="Bank Name"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/vigyos" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#FF0303"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="#F5F7FA"
                            app:cardElevation="5dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="10dp">
                            <Spinner
                                android:id="@+id/bankName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="none"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="5dp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">
                            <TextView
                                android:id="@+id/mobileNumberHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/vigyos"
                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#FF0303"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="#F5F7FA"
                            app:cardElevation="5dp">
                            <EditText
                                android:id="@+id/mobileNumber"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="Ex. 9876543210"
                                android:lines="1"
                                android:textSize="15sp"
                                android:padding="15sp"
                                android:textColorHint="@color/grey_font"
                                android:inputType="number" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/remarkHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remark"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="@color/vigyos"
                            android:textSize="18sp"
                            android:layout_marginBottom="12dp" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:backgroundTint="#F5F7FA"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="10dp">
                            <EditText
                                android:id="@+id/remarkEnquiry"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="Optional"
                                android:lines="1"
                                android:textSize="15sp"
                                android:minHeight="40dp"
                                android:maxHeight="70dp"
                                android:padding="15sp"
                                android:textColorHint="@color/grey_font" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">
                            <TextView
                                android:id="@+id/fingerHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Finger Print"
                                android:layout_marginStart="20sp"
                                android:textColor="@color/vigyos"
                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="#FF0303"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/captureFingerPrint"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="15dp"
                            app:cardBackgroundColor="@color/vigyos"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15sp"
                                android:layout_gravity="center_vertical"
                                android:text="Capture Finger Print"
                                android:textSize="16sp"
                                android:textColor="@color/white"/>
                            <ImageView
                                android:id="@+id/captureData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15sp"
                                android:visibility="gone"
                                android:layout_gravity="center_vertical|end"
                                android:src="@drawable/done_icon"
                                app:tint="#89FF00"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/buttonDone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/button_submit"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:text="DONE"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/poppins_bold"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>