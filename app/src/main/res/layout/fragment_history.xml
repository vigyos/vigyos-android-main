<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.HistoryFragment">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/vigyos">
        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/aepsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="AEPS"
                        android:textColor="@color/vigyos"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/vigyos"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/payoutText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Payout"
                        android:textColor="#5C5C5C"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/vigyos"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/walletText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Wallet"
                        android:textColor="#5C5C5C"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/vigyos"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/panCardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Pan Card"
                        android:textColor="#5C5C5C"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/vigyos"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/gstText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="GST"
                        android:textColor="#5C5C5C"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/vigyos"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80sp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/itrText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="ITR Service"
                        android:textColor="#5C5C5C"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/vigyos"/>
                </RelativeLayout>





            </LinearLayout>




        </HorizontalScrollView>
    </RelativeLayout>









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- =================== Category Drop Down ========================= -->
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:hint="Category">
                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="No History"
                    android:textColor="@color/vigyos"
                    android:textSize="30sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:background="@drawable/recycle_borderline"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                tools:listitem="@layout/layout_history_item" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>