<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">
    <RelativeLayout
        android:id="@+id/user_img"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="15sp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/male_vactor"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/white"/>
        <LinearLayout
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/hankengrotesk_regular"/>
            <TextView
                android:id="@+id/userNameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krishnkant sharma"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/hankengrotesk_regular"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/notification"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/notification_bg">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerInParent="true"
                android:src="@drawable/notification"
                app:tint="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_img">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/new_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30sp"
                    android:text="Available Balance"
                    android:textColor="#A5CBE8"
                    android:textSize="16sp"
                    android:fontFamily="@font/hankengrotesk_medium"/>
                <LinearLayout
                    android:id="@+id/walletView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/currency_rupee"
                        app:tint="@color/white" />
                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/hankengrotesk_regular"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/new_wallet"
                android:orientation="vertical"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="-23sp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/offer_card"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="25dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:columnCount="5"
                        android:rowCount="1">
                        <LinearLayout
                            android:id="@+id/aeps"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:src="@drawable/aeps_2" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="AEPS"
                                android:fontFamily="@font/hankengrotesk_regular"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/panService"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:src="@drawable/pan_card_services" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="PanCard"
                                android:fontFamily="@font/hankengrotesk_regular"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/gst"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:src="@drawable/gst_servcices" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/hankengrotesk_regular"
                                android:text="GST"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/udyam"
                            android:layout_width="50sp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="35sp"
                                android:layout_height="35sp"
                                android:src="@drawable/udyam"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/hankengrotesk_regular"
                                android:text="Udyam"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </GridLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-30dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/home_round_bg">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/top_services_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_marginTop="40dp"
                            app:cardCornerRadius="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:layout_marginStart="22dp"
                                    android:fontFamily="@font/hankengrotesk_medium"
                                    android:text="Top Services"
                                    android:textColor="@color/title_text"
                                    android:textSize="22sp" />
                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="10sp"
                                    android:columnCount="4"
                                    android:rowCount="2">
                                    <LinearLayout
                                        android:id="@+id/taxService"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_column="0"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="1sp"
                                            app:cardCornerRadius="15dp">
                                            <ImageView
                                                android:layout_width="35sp"
                                                android:layout_height="35sp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:padding="0dp"
                                                android:src="@drawable/tax_services" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Tax Service"
                                            android:textAlignment="center"
                                            android:textColor="@color/text_color"
                                            android:textSize="15sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/dscService"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_column="1"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="35sp"
                                                android:layout_height="35sp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:padding="3dp"
                                                android:src="@drawable/dsc_services" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="DSC"
                                            android:textAlignment="center"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/itrService"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_column="2"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:src="@drawable/income_tax_return" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="ITR"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/eWay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_column="3"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="40sp"
                                                android:layout_height="40sp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:padding="3dp"
                                                android:src="@drawable/e_way_bills" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="E-way"
                                            android:textAlignment="center"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/accounting"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="1"
                                        android:layout_column="0"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:layout_marginTop="15sp"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="36dp"
                                                android:layout_height="36sp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:padding="3dp"
                                                android:src="@drawable/accounting" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Accounting"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/iec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="1"
                                        android:layout_column="1"
                                        android:layout_columnWeight="1"
                                        android:layout_marginTop="15sp"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="36dp"
                                                android:layout_height="36sp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:padding="3dp"
                                                android:src="@drawable/iec" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="IEC"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/ipr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="1"
                                        android:layout_columnWeight="1"
                                        android:layout_marginTop="15dp"
                                        android:layout_column="2"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="36dp"
                                                android:layout_height="36dp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:padding="3dp"
                                                android:src="@drawable/ipr" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="IPR"
                                            android:textAlignment="center"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/seeMore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:layout_column="3"
                                        android:layout_columnWeight="1"
                                        android:layout_marginTop="15sp"
                                        android:gravity="center"
                                        android:orientation="vertical">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/seemore_topservices"
                                            android:layout_width="60sp"
                                            android:layout_height="60sp"
                                            app:cardBackgroundColor="@color/icon_card"
                                            app:cardElevation="2sp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="28sp"
                                                android:layout_height="28sp"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:src="@drawable/more_icon"
                                                app:tint="@color/vigyos"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="See more"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                </GridLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22sp"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="22sp"
                            android:layout_marginBottom="15sp"
                            android:fontFamily="@font/hankengrotesk_medium"
                            android:text="Promo &amp; Discount"
                            android:textColor="@color/title_text"
                            android:textSize="21sp" />
                        <RelativeLayout
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="9dp"
                            tools:ignore="MissingConstrains">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/bannerRecyclerView"
                                android:layout_marginHorizontal="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/Recharge_bill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="20dp"
                            android:visibility="gone"
                            app:cardCornerRadius="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:layout_marginStart="22dp"
                                    android:text="Recharge and Pay Bills "
                                    android:textColor="@color/black"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:columnCount="3"
                                    android:rowCount="2">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="0"
                                        android:layout_column="0"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="10dp">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:src="@drawable/currency_rupee" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Mobile \nRecharges"
                                            android:textAlignment="center"
                                            android:textColor="#808080"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="0"
                                        android:layout_column="1"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="10dp">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:src="@drawable/currency_rupee" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="DTH"
                                            android:textColor="#808080"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="0"
                                        android:layout_column="2"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="10dp">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            app:cardCornerRadius="12dp">
                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal|center_vertical"
                                                android:src="@drawable/currency_rupee" />
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Electricity"
                                            android:textColor="#808080"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_row="1"
                                        android:layout_column="0"
                                        android:layout_columnWeight="1"
                                        android:layout_gravity="center_vertical|center_horizontal"
                                        android:layout_marginVertical="30dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="10dp">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
