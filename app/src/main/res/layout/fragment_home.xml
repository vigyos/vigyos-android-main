<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFEEFD"
    tools:context=".Fragment.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- =================== Action bar ========================= -->

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_scrollFlags="scroll|enterAlways">


                <LinearLayout
                    android:id="@+id/user_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/person"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:src="@drawable/user_icon" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:background="#808080" />

                    <LinearLayout
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome,"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/userNameHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="21dp" />

                    </LinearLayout>


                    <!--   <androidx.constraintlayout.utils.widget.ImageFilterButton
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="right"
                           android:layout_marginRight="10dp"
                           android:background="#2196F3"
                           android:src="@drawable/wallet_icon" /> -->

                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrolling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/empty_text"
                    android:layout_width="match_parent"
                    android:layout_height="65dp" />


                <!-- =================== Banner ==================== -->
                <RelativeLayout
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/empty_text"
                    android:layout_marginBottom="9dp"
                    tools:ignore="MissingConstrains">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginHorizontal="20sp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="20sp"
                        app:cardElevation="20sp"
                        app:cardBackgroundColor="#DFEEFD" >
                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/image_slider"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            app:iss_auto_cycle="true"
                            app:iss_delay="1000"
                            app:iss_period="1000"
                            app:iss_corner_radius="20" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <!-- ================== Dashboard ================== -->
                <LinearLayout
                    android:id="@+id/dashboard_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/banner"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="My Dashboard"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />


                    <GridLayout
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:rowCount="1">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/Total_cardview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_columnWeight="2"
                            android:layout_gravity="fill"
                            android:layout_margin="20dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:padding="-1dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="16dp"
                            android:layout_rowWeight="1">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#2A5ECBFB"
                                android:gravity="center_vertical"
                                android:paddingLeft="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:cardCornerRadius="12dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:src="@drawable/wallet" />


                                    </androidx.cardview.widget.CardView>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="7dp"
                                        android:gravity="center_vertical"
                                        android:text="500"
                                        android:textColor="@color/vigyos"
                                        android:textSize="20dp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Wallet"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="normal" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_columnWeight="1.2"
                            android:layout_gravity="fill"
                            android:layout_margin="20dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="16dp"
                            android:layout_rowWeight="1">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#2A5ECBFB"
                                android:paddingLeft="20dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:cardCornerRadius="12dp">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:src="@drawable/support_ticket_icon" />


                                    </androidx.cardview.widget.CardView>


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="7dp"
                                        android:gravity="center_vertical"
                                        android:text="0"
                                        android:textStyle="bold"
                                        android:textColor="@color/vigyos"
                                        android:textSize="20dp" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Support Ticket"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="10dp"
                                    android:textSize="18dp"
                                    android:textStyle="normal" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </GridLayout>


                </LinearLayout>


                <!-- ================ Top Services ==================-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/top_services_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dashboard_layout"
                    android:layout_gravity="fill"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginLeft="22dp"
                            android:text="Top Services"
                            android:textColor="@color/black"
                            android:textSize="22dp"
                            android:textStyle="bold" />


                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnCount="3"
                            android:rowCount="2">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    android:backgroundTint="#DFDEDE">

                                    <ImageView
                                        android:padding="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/gst_icone"
                                        app:tint="@color/vigyos"/>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginTop="5dp"
                                    android:text="GST Registration"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    android:backgroundTint="#DFDEDE">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/tds_icon"
                                        app:tint="@color/vigyos"/>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="TDS Return"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    android:backgroundTint="#DFDEDE">

                                    <ImageView
                                        android:padding="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/e_way_icon" />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:text="E-way"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginVertical="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    android:backgroundTint="#DFDEDE">

                                    <ImageView
                                        android:padding="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/itr__icon" />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="ITR-1"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginVertical="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    android:backgroundTint="#DFDEDE">

                                    <ImageView
                                        android:padding="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/udyam_registration_icon" />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:text="Udyam Registration"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginVertical="30dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/seemore_topservices"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="12dp">

                                    <ImageView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:background="#2196F3"
                                        android:src="@drawable/seemore_arrow_icone"

                                        />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="See more"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                        </GridLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <!-- ================ Offer Banner ==================-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/offer_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top_services_card"
                    android:layout_margin="20dp"
                    android:backgroundTint="#2196F3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="16dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/offer_icon"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:padding="2dp"
                            android:src="@drawable/offer_demo_icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/free_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:textColor="#FFC107"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/free_text"
                                android:text="GST Registration"
                                android:textColor="@color/white"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:padding="6dp"
                            android:src="@drawable/seemore_arrow_icone" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- ================ Recharge and bills ==================-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/Recharge_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/offer_card"
                    android:layout_gravity="fill"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginLeft="22dp"
                            android:text="Recharge and Pay Bills "
                            android:textColor="@color/black"
                            android:textSize="22dp"
                            android:textStyle="bold" />


                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnCount="3"
                            android:rowCount="2">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/demo_money_icon" />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Mobile \nRecharges"
                                    android:textColor="#808080"
                                    android:textAlignment="center"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/demo_money_icon" />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="DTH"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:src="@drawable/demo_money_icon" />


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Electricity"
                                    android:textColor="#808080"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center_vertical|center_horizontal"
