<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment.Onboarding1Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_100sdp"
                android:src="@drawable/onbording_page_image" />
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Heading"
                android:textColor="@color/dark_vigyos"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/detailsText"
                android:layout_width="261sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/send_money"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textSize="14sp"
                android:lineSpacingExtra="5sp"/>
            <LinearLayout
                android:id="@+id/dots"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="8sp"
                    android:layout_height="8sp"
                    android:src="@drawable/dot_fill"
                    tools:ignore="SmallSp" />
                <ImageView
                    android:layout_width="8sp"
                    android:layout_height="8sp"
                    android:layout_marginStart="24sp"
                    app:tint="#D8D4D4"
                    android:src="@drawable/dot"
                    tools:ignore="SmallSp" />
                <ImageView
                    android:layout_width="8sp"
                    android:layout_height="8sp"
                    android:layout_marginStart="24sp"
                    app:tint="#D8D4D4"
                    android:src="@drawable/dot"
                    tools:ignore="SmallSp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="56sp"
                android:layout_marginHorizontal="20sp"
                android:layout_below="@+id/dots"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/next_button_filled">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Next Step"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/skipThis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nextButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/skip_this_step"
                android:textSize="16sp"
                android:textColor="@color/dark_vigyos"
                android:fontFamily="@font/poppins_semi_bold"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>