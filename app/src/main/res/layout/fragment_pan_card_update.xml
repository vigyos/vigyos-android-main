<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.vigyos.vigyoscentercrm.Fragment.PanCardUpdateFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETAILS"
                    android:textSize="30sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#5A5959"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:id="@+id/aadhaar_number_heading"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/vigyos"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="#FF0303"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">
                        <EditText
                            android:id="@+id/firstName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="First Name"
                            android:inputType="textPersonName"
                            android:layout_marginStart="15sp"
                            android:textColorHint="@color/grey_font"
                            android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Middle Name"
                            android:id="@+id/bank_name_heading"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/vigyos" />
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardElevation="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:id="@+id/middleName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Middle Name"
                            android:textSize="15sp"
                            android:layout_marginStart="15sp"
                            android:textColorHint="@color/grey_font"
                            android:inputType="textPersonName" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:textSize="18sp"
                            android:id="@+id/last_name_heading"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/vigyos" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="#FF0303"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardElevation="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:id="@+id/lastName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Last Name"
                            android:textSize="15sp"
                            android:layout_marginStart="15sp"
                            android:textColorHint="@color/grey_font"
                            android:inputType="textPersonName" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:id="@+id/gender_heading"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/vigyos"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="#FF0303"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardElevation="5dp">
                        <Spinner
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="5dp" />
                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card Type"
                            android:id="@+id/cardType"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/vigyos"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="#FF0303"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardElevation="5dp">
                        <Spinner
                            android:id="@+id/cardTypeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="5dp" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:id="@+id/mobile_num_heading"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/vigyos"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="#FF0303"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardElevation="5dp">
                        <EditText
                            android:id="@+id/mobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Ex. 9876543210"
                            android:textSize="15sp"
                            android:layout_marginStart="15sp"
                            android:textColorHint="@color/grey_font"
                            android:inputType="number" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:id="@+id/email_heading"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0303"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#F5F7FA"
                    app:cardElevation="5dp">
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Ex. abc@gmail.com"
                        android:textSize="15sp"
                        android:layout_marginStart="15sp"
                        android:textColorHint="@color/grey_font"
                        android:inputType="textEmailAddress" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:id="@+id/address_heading"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0303"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#F5F7FA"
                    app:cardElevation="5dp">
                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15sp"
                        android:background="@null"
                        android:hint="Address"
                        android:inputType="textLongMessage"
                        android:textColorHint="@color/grey_font"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remark"
                        android:id="@+id/remark_heading"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp"
                        android:layout_marginBottom="12dp" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="#F5F7FA"
                        app:cardElevation="5dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="10dp">
                        <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="Optional"
                            android:textSize="15sp"
                            android:minHeight="40dp"
                            android:maxHeight="70dp"
                            android:paddingVertical="10dp"
                            android:layout_marginStart="15sp"
                            android:textColorHint="@color/grey_font"
                            android:inputType="textLongMessage" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/updatePanCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_submit"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15sp"
                    android:elevation="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:text="UPDATE"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</FrameLayout>