<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/_6sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_border">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/referenceID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:elegantTextHeight="true"
                    android:lines="1"
                    android:text="#000000"
                    android:textColor="#80333333"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:elegantTextHeight="true"
                    android:text="Success"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/cr"
                    android:fontFamily="@font/poppins_medium" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/top"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:elegantTextHeight="true"
                        android:text="krishnkant"
                        android:textColor="@color/dark_vigyos"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins_medium"
                        android:elegantTextHeight="true"
                        android:text="₹108.00"
                        android:textColor="@color/dark_vigyos"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp">
                    <TextView
                        android:id="@+id/billNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:elegantTextHeight="true"
                        android:text="NKDY4851412"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_8sdp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp">
                    <TextView
                        android:id="@+id/transactionTypeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:elegantTextHeight="true"
                        android:text="Transaction Type"
                        android:visibility="gone"
                        android:textColor="@color/dark_vigyos"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/transactionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:elegantTextHeight="true"
                        android:text="Bill Pay"
                        android:textColor="@color/dark_vigyos"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp">
                    <TextView
                        android:id="@+id/commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:text="Commission"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#001646"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:id="@+id/commissionAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:elegantTextHeight="true"
                        android:text="₹0.00"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#001646"
                        android:fontFamily="@font/poppins_medium"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/dateAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:34:42 PM, 16 Oct 2023"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#80333333"
                    android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>