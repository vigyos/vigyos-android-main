<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_6sdp">
    <RelativeLayout
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_border">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/orderID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:elegantTextHeight="true"
                    android:lines="1"
                    android:text="#000000"
                    android:textColor="#80333333"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:elegantTextHeight="true"
                    android:text="Pending"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/pending"
                    android:fontFamily="@font/poppins_medium" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_below="@+id/top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/serviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:elegantTextHeight="true"
                    android:text="New PAN Card [Physical Pan]"
                    android:textColor="#001646"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:elegantTextHeight="true"
                    android:text="Akanksha Sharma"
                    android:textColor="#001646"
                    android:textSize="@dimen/_10sdp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/callIcon"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/phone_icon"
                        app:tint="@color/vigyos" />
                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:elegantTextHeight="true"
                        android:text="+91-8435126402"
                        android:textColor="@color/dark_vigyos"
                        android:textSize="@dimen/_9sdp"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp">
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="04:43:03 PM, 16 Oct 2023"
                        android:textColor="#80333333"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:elegantTextHeight="true"
                        android:text="â‚¹0.00"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/dark_vigyos"
                        android:fontFamily="@font/poppins_medium"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>