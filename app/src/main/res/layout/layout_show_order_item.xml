<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#FCEAF5FA"
        app:cardCornerRadius="10sp"
        app:cardElevation="3sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/topLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp">
                <RelativeLayout
                    android:id="@+id/firstTextLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5sp"
                    android:layout_toStartOf="@+id/price">
                    <TextView
                        android:id="@+id/serviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New PAN Card [Physical Pan]"
                        android:textColor="@color/text_color"
                        android:textSize="18sp"
                        android:lines="1"/>
                    <TextView
                        android:id="@+id/orderID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/serviceName"
                        android:layout_marginTop="5sp"
                        android:lines="1"
                        android:text="#Oreder: "
                        android:textColor="#3C3842"
                        android:textSize="18sp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5sp"
                    android:lines="1"
                    android:text="â‚¹ "
                    android:textColor="#3C3842"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:layout_height="1dp"
                android:layout_below="@+id/topLyt"
                android:background="#D6D6D6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewLine">
                <RelativeLayout
                    android:id="@+id/statusBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pending"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8sp"
                        android:layout_marginHorizontal="13sp"
                        android:text="Pending"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>