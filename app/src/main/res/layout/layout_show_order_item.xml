<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="8dp"
        app:cardBackgroundColor="#FCEAF5FA"
        app:cardCornerRadius="10sp"
        app:cardElevation="3sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/topLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginHorizontal="10sp">
                <RelativeLayout
                    android:id="@+id/topLytOrderID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/orderID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="#85496525"
                        android:textColor="#3C3842"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat_regular"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/statusBackground"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10sp"
                        android:lines="1"
                        android:text="â‚¹ 100"
                        android:textColor="@color/vigyos"
                        android:textSize="18sp"/>
                    <RelativeLayout
                        android:id="@+id/statusBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pending"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="10sp"
                            android:text="Pending"
                            android:textSize="12sp"
                            android:textColor="#FFA900"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/firstTextLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5sp"
                    android:layout_below="@+id/topLytOrderID">
                    <TextView
                        android:id="@+id/serviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New PAN Card [Physical Pan]"
                        android:textColor="@color/text_color"
                        android:textSize="18sp"
                        android:lines="1"
                        android:fontFamily="@font/montserrat_medium"/>
                    <TextView
                        android:id="@+id/customerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_below="@+id/serviceName"
                        android:text="krishnkant Sharma"
                        android:textColor="@color/text_color"
                        android:textSize="18sp"
                        android:lines="1"
                        android:fontFamily="@font/montserrat_medium"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7sp"
                        android:layout_marginBottom="10sp"
                        android:layout_below="@+id/customerName"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.9">
                            <ImageView
                                android:id="@+id/emailIcon"
                                android:layout_width="16sp"
                                android:layout_height="16sp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/email_icon"
                                app:tint="@color/vigyos" />
                            <TextView
                                android:id="@+id/emailID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3sp"
                                android:text="krishankant.sharma@vigyos.com"
                                android:textSize="14sp"
                                android:textColor="#565D63"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1">
                            <ImageView
                                android:id="@+id/callIcon"
                                android:layout_width="16sp"
                                android:layout_height="16sp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/phone_icon"
                                app:tint="@color/vigyos" />
                            <TextView
                                android:id="@+id/phoneNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="+91-8435126402"
                                android:textColor="#565D63"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_below="@+id/topLyt"
                android:background="#D6D6D6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/viewLine">
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>