<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16sdp">
            <TextView
                android:id="@+id/documentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Require Documents"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_12sdp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#FF0303"
                android:layout_marginStart="@dimen/_3sdp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/documentImage_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/credential_border_fill">
            <ImageView
                android:id="@+id/showImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true" />
            <RelativeLayout
                android:id="@+id/documentImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/documentImage1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/no_image_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/documentImage1"
                    android:elegantTextHeight="true"
                    android:text="Image Not Available"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#A6333333"
                    android:fontFamily="@font/poppins_medium"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/uploadImageLyt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    app:lottie_fileName="uploading.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/animation_view"
                    android:elegantTextHeight="true"
                    android:text="Image upload, Please Wait..."
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#A6333333"
                    android:fontFamily="@font/poppins_medium" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>