<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_light.Vigyos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_vigyos</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize box stroke color -->
        <item name="boxStrokeColor" tools:override="true">
            @color/mtrl_textinput_default_box_stroke_color
        </item>
        <!-- Customize other attributes if needed -->
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Customize the underline color -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorOutline">@color/black</item>
        <!-- Customize other attributes if needed -->
    </style>

    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="aadhaar_tab_text" parent="@style/Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="pan_tab_text" parent="@style/Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme_light.Vigyos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="myToastSuccess">
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">@dimen/_10sdp</item>
        <item name="stIconStart">@drawable/success</item>
        <item name="iconSize">@dimen/_25sdp</item>
        <item name="stColorBackground">#00944E</item>
        <item name="stRadius">@dimen/_30sdp</item>
    </style>

    <style name="myToastWarning">
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">@dimen/_10sdp</item>
        <item name="stIconStart">@drawable/warning</item>
        <item name="iconSize">@dimen/_25sdp</item>
        <item name="stColorBackground">#001646</item>
        <item name="stRadius">@dimen/_30sdp</item>
    </style>

    <style name="myToastError">
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">@dimen/_10sdp</item>
        <item name="stIconStart">@drawable/error</item>
        <item name="iconSize">@dimen/_25sdp</item>
        <item name="stColorBackground">#F00024</item>
        <item name="stRadius">@dimen/_30sdp</item>
    </style>

</resources>