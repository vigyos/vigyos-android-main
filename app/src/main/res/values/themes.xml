<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_light.Vigyos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">#0B7AD3</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize box stroke color -->
        <item name="boxStrokeColor" tools:override="true" >@color/mtrl_textinput_default_box_stroke_color</item>
        <!-- Customize other attributes if needed -->
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- Customize the underline color -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorOutline">@color/black</item>
        <!-- Customize other attributes if needed -->
    </style>

</resources>